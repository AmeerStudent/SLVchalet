  <div class="container" style="margin-top:150px; min-height:90vh">
  <style>
  h1 {
    font-family: 'Montserrat', sans-serif;
  }
</style>
    <h1>Looking for facilities ?</h1>
    <form method="GET">
      <div class="card">
        <div class="card-body">
          <div class="input-group">
            <input type="text" class="form-control" name="title" aria-label="Text input with dropdown button" style="margin-right:20px">
            <select class="custom-select" name="category" id="inputGroupSelect01" style="margin-right:20px">
              <option value="1">All</option>
              <option value="2">Facilities</option>
              <option value="3">Activities</option>
              <option value="4">Chalet</option>
              <option value="5">Others</option>
            </select>
            <div class="input-group-prepend">
              <button class="btn btn-primary">Search</button>
            </div>
          </div>
        </div>
      </div>
    </form>
    <h1>Facilities Listing</h1>
    <!-- /. ROW  -->
				<hr />
				<div class="col-md-12">
					<!-- Advanced Tables -->
					<div class="panel panel-default">
						<div class="panel-heading">facilities</div>
						<div class="panel-body">
						<!-- Search Bar -->
                            			<input type="text" class="form-control mb-2" id="searchInput" placeholder="Search...">
							<div class="table-responsive">
								<table class="table table-striped table-bordered table-hover"
									id="dataTables-example">
									<thead>
										<tr>
											<th>FACILITY ID</th>
											<th>FCILITY NAME</th>
											<th colspan="2">Action</th>
										</tr>
									</thead>
									<tbody></tbody>
										<tr th:each="facilities : ${facilitiess}">
										<td th:text="${facilities.facilityId}"></td>
        									<td th:text="${facilities.facilityName}"></td>	
 										<td>
										<a
										th:href="@{/facilityview?facilityId=}+${facilities.facilityId}" class="btn view-button btn-info">Info</a>
										</td>
 										<td>
                   								<a 
										th:href="@{/facilityedit?facilityId=}+${facilities.facilityId}" class="btn update-button btn-primary">Edit</a>
            									</td>
										<td>
             								  	<a 
                   								th:href="@{/deletefacility/(facilityId=${facilities.facilityId})}" 
                   								value="{facilities.facilityId}" 
                   								onclick="return confirm('Are you sure you want to delete this facility?')"><button class="btn delete-button btn-danger" >Delete</button></a>
            									</td>
									</tr>
									</tbody>
								</table>
								<div style="color: white; font-size: 10px;">
									&nbsp; <a th:href="@{/facilityregister}" class="btn btn-danger square-btn-adjust">Register facility</a>
								</div>
							</div>


						</div>



					</div>
				</div>
  </div>

